{
  "name": "dev-loop",
  "version": "1.0.0",
  "description": "Automated development workflow orchestrator that wraps task-master-ai with multi-provider AI support, testing, and log analysis",
  "main": "dist/index.js",
  "bin": {
    "dev-loop": "./dist/index.js",
    "dev-loop-mcp": "./dist/mcp/server.mjs"
  },
  "scripts": {
    "build": "tsc && cp -r src/templates dist/ && tsc -p tsconfig.mcp.json",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "ai",
    "workflow",
    "automation",
    "testing",
    "playwright",
    "cypress",
    "task-master"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@clack/prompts": "^0.8.1",
    "@google/generative-ai": "^0.2.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3",
    "fastmcp": "^3.23.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.5.0",
    "inquirer": "^9.2.12",
    "openai": "^4.20.0",
    "ora": "^5.4.1",
    "immer": "^10.0.3",
    "partial-json": "^0.1.7",
    "task-master-ai": "^0.40.0",
    "yaml": "^2.3.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
